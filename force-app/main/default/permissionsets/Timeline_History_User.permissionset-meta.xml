<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Provides access to use the Timeline History Component on record pages. Does not
        include permission to configure child objects. Assign to all users who need to view the
        timeline.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Timeline History User</label>
    <classAccesses>
        <apexClass>TimelineHistoryController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>TimelineConfigController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>HistoryReportController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
</PermissionSet>